<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Activities.Starting_Pages.Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/splash"
        android:layout_marginTop="49dp"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_extrabold"
            android:textSize="22dp"
            android:layout_marginTop="85dp"
            android:textStyle="bold"
            android:text="India's scholastic digital showcase"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito"
            android:textSize="18dp"
            android:textColor="@color/theme_blue"
            android:text="The"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_extrabold"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/theme_blue"
                android:text=" Battle "></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito"
                android:textSize="18dp"
                android:textColor="@color/theme_blue"
                android:text="of "></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito"
                android:textSize="18dp"
                android:textColor="@color/theme_blue"
                android:text="the "></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_extrabold"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/theme_blue"
                android:text="Best. "></TextView>


        </LinearLayout>

        <EditText
            android:id="@+id/et_personal_firstname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/txtpersonalftwo"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/round_textview"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:hint="email ID"
            android:paddingLeft="16dp"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:textColorHint="#bebebe">
            <requestFocus />
        </EditText>


        <EditText
            android:id="@+id/et_personal_lastname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/et_personal_firstname"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/round_textview"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textColor="@color/black"
            android:textColorHint="#bebebe"></EditText>

        <TextView
            android:id="@+id/txt_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:layout_gravity="right"
            android:layout_marginRight="49dp"
            android:layout_marginTop="16dp"></TextView>



        <CheckBox
            android:id="@+id/chk_keepsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_blue"
            android:layout_gravity="center"
            android:buttonTint="@color/theme_blue"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"></CheckBox>


        <Button
            android:id="@+id/btn_signup_personal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_textview"
            android:enabled="false"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_below="@+id/linear_personal_phnno"></Button>


        <TextView
            android:id="@+id/txt_notamember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"></TextView>


        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bordee"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/theme_blue"
            android:textSize="16dp"
            android:layout_below="@+id/linear_personal_phnno"></Button>


    </LinearLayout>

</ScrollView>