<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FollowingFragment.Hub_FollowingFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="122dp"
                android:layout_height="175dp"
                android:layout_margin="11dp"
                android:background="@drawable/bordeethree"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/plus"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"></ImageView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubs you follow will apear here.\nlet's search some of the Hubs\nnear you."
                android:layout_marginTop="16dp"
                android:textColor="@color/theme_blue"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubs you follow will apear here.\nlet's search some of the Hubs\nnear you."
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/theme_blue"
                android:layout_marginLeft="16dp"></TextView>

                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_textview_clicked"
                    android:text="Search"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"></Button>


        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>