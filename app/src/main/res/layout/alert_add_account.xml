<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_email_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="11dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Account"
                android:layout_below="@+id/img_alert"
                android:layout_marginTop="8dp"
                android:textSize="22dp"
                android:textColor="@color/theme_blue"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Log in detail of an\n existing account to Add"
                android:layout_below="@+id/txt_typeofuser"
                android:layout_marginTop="11dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerHorizontal="true"></TextView>


            <TextView
                android:id="@+id/txt_currentpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to current account"
                android:layout_below="@+id/img_alert"
                android:drawableLeft="@drawable/ic_baseline_check_circle_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@color/theme_blue"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>



            <EditText
                android:id="@+id/et_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/txt_belowtypeofuser"
                android:textSize="16dp"
                android:hint="Email/ Phone Number"
                android:textColorHint="#bebebe"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/holo_blue_light"></EditText>


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/et_login_user"
                android:textSize="16dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#bebebe"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/holo_blue_light"></EditText>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"
                android:layout_below="@+id/card_email_change"
                android:text="Log In"
                android:textColor="@color/white"
                android:textAllCaps="false"></Button>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/card_email_change"
        android:text="Create New"
        android:textColor="@color/white"
        android:textAllCaps="false"></Button>

    <Button
        android:id="@+id/btn_alert_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bordeetwo"
        android:layout_below="@+id/btn_create_account"
        android:text="Cancel"
        android:textColor="@color/theme_blue"
        android:textAllCaps="false"></Button>






</LinearLayout>