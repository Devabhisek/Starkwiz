<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Student_Userselection_Fragment">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We conduct monthly online Multiple choice \nQuestion (MCQ) Tests as Dynamos."
                android:layout_margin="5dp"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student studying from Class 4 to 10 are only \neligible to join Starkwiz."
                android:layout_margin="5dp"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As a student will be able to appear \nDynamos of vital Subjects which have all your \nsyllabus covered as tests."
                android:layout_margin="5dp"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starkwiz have well curated optimized syllabus from\n ICSE and CBSE board of India."
                android:layout_margin="5dp"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starkwiz doesn't provide or support in-app tutorial so we promise you the best experience\n of MCQ test."
                android:layout_margin="5dp"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continued..."
                android:layout_margin="5dp"
                android:textSize="15dp"></TextView>

        </LinearLayout>


</FrameLayout>