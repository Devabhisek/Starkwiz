<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Activities.Quiz_Activities.Student_Quiz_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/dash_menubar"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:backgroundTint="@color/white"
                app:cardElevation="11dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/mathematics"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="5"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/dash_setting"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/leftchevron"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="3"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"></ImageView>

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/logowhite"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="11dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"></ImageView>


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@mipmap/cancel"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:layout_weight="3"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"></ImageView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical"
                            android:layout_alignParentLeft="true">

                            <TextView
                                android:id="@+id/txt_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:layout_weight="5"
                                android:gravity="center"
                                android:textColor="@color/white"></TextView>



                            <TextView
                                android:id="@+id/txt_otptimer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00.60"
                                android:layout_weight="5"
                                android:gravity="center"
                                android:textColor="@color/theme_blue"
                                android:layout_marginTop="5dp"></TextView>


                            <Chronometer
                                android:id="@+id/timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"></Chronometer>


                        </LinearLayout>

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/txtfixture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:textColor="@color/white"></TextView>


                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/txt_quiz_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="11dp"
                            android:gravity="center"
                            android:text="Marks\n80"
                            android:textColor="@color/white"></TextView>


                    </RelativeLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_quiz_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"></TextView>

            <TextView
                android:id="@+id/txt_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"></TextView>

            <TextView
                android:id="@+id/txt_noofqn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"></TextView>

            <ImageView android:visibility="gone"
                android:id="@+id/img_qn"
                android:layout_width="match_parent"
                android:layout_height="160dp"></ImageView>


            <TextView
                android:id="@+id/txt_qn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"></TextView>



            <TextView
                android:id="@+id/txt_qn_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"></TextView>


            <RadioGroup
                android:id="@+id/optionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <Button
                android:id="@+id/optionone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/checkbox"
                android:layout_marginRight="55dp"
                android:background="@null"
                android:paddingLeft="16dp"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="49dp"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"></Button>

            <Button
                android:id="@+id/optiontwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="55dp"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/checkbox"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_marginLeft="49dp"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"></Button>

            <Button
                android:id="@+id/optionthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="55dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/checkbox"
                android:paddingLeft="16dp"
                android:layout_marginLeft="49dp"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"></Button>

            <Button
                android:id="@+id/optionfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="55dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_marginBottom="16dp"
                android:drawableLeft="@drawable/checkbox"
                android:drawablePadding="16dp"
                android:layout_marginLeft="49dp"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"></Button>

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linearcontainer">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:enabled="false"
                android:alpha="0.7"
                android:background="@drawable/rounded_button_green"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp"></Button>




            <Button
                android:id="@+id/btn_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:background="@drawable/bordee"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp"></Button>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>