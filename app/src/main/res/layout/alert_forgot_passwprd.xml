<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_centerVertical="true"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:backgroundTint="@color/white"
    android:orientation="vertical">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:layout_below="@+id/img_alert"
                android:layout_marginTop="3dp"
                android:textSize="18dp"
                android:textColor="@color/theme_blue"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please Enter YourCurrent Password\nand Confirm once you have entered\nyour new Password"
                android:layout_below="@+id/txt_typeofuser"
                android:layout_marginTop="11dp"
                android:textSize="16dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerHorizontal="true"></TextView>


            <TextView
                android:id="@+id/txt_currentpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Password"
                android:layout_below="@+id/img_alert"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="3dp"
                android:textSize="16dp"
                android:textColor="@color/theme_blue"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>



            <EditText
                android:id="@+id/et_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/txt_belowtypeofuser"
                android:textSize="16dp"
                android:hint="starkwiz2021@gmail.com"
                android:textColorHint="#bebebe"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/holo_blue_light"></EditText>


            <TextView
                android:id="@+id/txt_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:layout_below="@+id/img_alert"
                android:layout_marginTop="3dp"
                android:textSize="16dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/theme_blue"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>



            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/txt_belowtypeofuser"
                android:textSize="16dp"
                android:hint="starkwiz2021@gmail.com"
                android:textColorHint="#bebebe"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/holo_blue_light"></EditText>

            <TextView
                android:id="@+id/txt_reenterpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Re-enter Password"
                android:layout_below="@+id/img_alert"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nunito"
                android:textSize="16dp"
                android:textColor="@color/theme_blue"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>



            <EditText
                android:id="@+id/et_reenterpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/txt_belowtypeofuser"
                android:textSize="16dp"
                android:hint="starkwiz2021@gmail.com"
                android:textColorHint="#bebebe"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/holo_blue_light"></EditText>

        </LinearLayout>

    <Button
        android:id="@+id/btn_change_email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/card_email_change"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textAllCaps="false"></Button>

    <Button
        android:id="@+id/btn_change_email_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bordeetwo"
        android:layout_below="@+id/btn_change_email_confirm"
        android:text="Cancel"
        android:textColor="@color/theme_blue"
        android:textAllCaps="false"></Button>


   </LinearLayout>
</androidx.cardview.widget.CardView>