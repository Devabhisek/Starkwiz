<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="516dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="11dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/english"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="95dp"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/emthusiast"></ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="22dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enthusiast"
                    android:layout_marginLeft="22dp"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank: 2231"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="22dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/txt_scorecard_fixture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 2020"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="22dp"
            android:textSize="19dp"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/txt_scorecard_subjectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathematics"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="16dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/txt_scorecard_modulename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Systems &amp; Algebra"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:textColor="@color/white"></TextView>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:background="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Accuracy:"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="53.31%"
                android:gravity="right"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Correct Answer:"
                android:textStyle="bold"
                android:textSize="19dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="52/80"
                android:gravity="right"
                android:paddingRight="16dp"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/white"></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Answer Points"
                android:textStyle="bold"
                android:textSize="19dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="520Pts."
                android:gravity="right"
                android:paddingRight="16dp"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/white"></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Time Bonus"
                android:textStyle="bold"
                android:textSize="19dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="33Pts."
                android:gravity="right"
                android:paddingRight="16dp"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/white"></TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Total Points"
                android:textStyle="bold"
                android:textSize="19dp"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="5531Pts."
                android:gravity="right"
                android:paddingRight="16dp"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/white"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_scorecard_profile"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="11dp"
                android:src="@mipmap/personthree"></de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_scorecard_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class 9"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/txt_scorecard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priyanka Gandhi"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"></TextView>

                <TextView
                    android:id="@+id/txt_scorecard_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rourkela, Odisha"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"></TextView>



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>