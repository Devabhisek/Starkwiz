<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/backhallow"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"></ImageView>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="65dp"
                android:src="@mipmap/starkwiz_scoreboard"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"></ImageView>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/searchhollow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="16dp"></ImageView>


        </RelativeLayout>

        <com.potyvideo.library.AndExoPlayerView
                android:id="@+id/andExoPlayerView"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="320dp" />


        <LinearLayout
            android:layout_below="@+id/andExoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caption for the Video"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:layout_marginLeft="16dp"></TextView>

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="4dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"></LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Some experiential details of the Video.Second line of detail max. to 3rd line of detail woth limited characters."
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/hearthollow"
                android:layout_weight="5"></ImageView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:src="@mipmap/starhollow"></ImageView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@mipmap/user_profile"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"></ImageView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:src="@mipmap/sharehollow"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"></ImageView>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColor="@color/theme_blue"
            android:background="@drawable/rounded_button_white"
            android:text="Follow"
            android:layout_marginBottom="5dp"></Button>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>