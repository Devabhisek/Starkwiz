<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DynamoFragments.ScheduleFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIXTURE : December"
                android:fontFamily="@font/nunito"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_math"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_margin="14dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="11dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@mipmap/mathematics">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="11dp"
                            android:text="21st\nDec"
                            android:textColor="@color/white"
                            android:textSize="14dp"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"
                            android:text="Time\n03.00 PM"
                            android:textColor="@color/white"
                            android:textSize="16dp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mathematics"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:fontFamily="@font/nunito"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="11dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number System &amp; \nAlgebra"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Remaining"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="11dp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 d:3 h:43 m"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marks"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="11dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="30dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90mins"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_margin="14dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="11dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@mipmap/scienceandtech">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21st\nDec"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="11dp"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time\n03.00 PM"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="35dp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Science &amp; Technology"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16dp"

                            android:layout_marginTop="11dp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solar System"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Remaining"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="35dp"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 d:3 h:43 m"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marks"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="11dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="30dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90mins"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"></TextView>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="11dp"
                android:background="@drawable/bordee"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="49dp"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule all of your Subjects here !"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"></TextView>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>