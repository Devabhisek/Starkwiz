<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FollowingFragment.All_FollowingFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <RelativeLayout
               android:layout_width="122dp"
               android:layout_height="175dp"
               android:layout_margin="11dp"
               android:background="@drawable/bordeethree"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:src="@mipmap/plus"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"></ImageView>


           </RelativeLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="People whom you follow will\nappear here. Connect with\nyour Facebook account or \nsearch by Name"
               android:layout_marginTop="55dp"
               android:fontFamily="@font/nunito"
               android:textColor="@color/theme_blue"
               android:layout_marginLeft="16dp"></TextView>


       </LinearLayout>

   </ScrollView>

</FrameLayout>