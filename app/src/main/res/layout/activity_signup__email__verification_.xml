<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Activities.Signup_Activities.Signup_Email_Verification_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:src="@mipmap/secondsplash"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"></ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/oceanblue"
            android:fontFamily="@font/nunito_extrabold"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get verified and we are \ndone to get you in"
            android:textSize="22dp"
            android:fontFamily="@font/nunito"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/round_textview"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="22dp"
            android:hint="Email Id"
            android:textColorHint="#bebebe"
            android:textColor="@color/black"
            android:paddingLeft="22dp"></EditText>

        <TextView
            android:id="@+id/txt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will send an email with a verification \ncode on the above address. Please Confirm and be patient for its neccessary for a Safe user experience"
            android:textSize="14dp"
            android:fontFamily="@font/nunito"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            ></TextView>


        <Button
            android:id="@+id/btn_cnfrm_email"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:background="@drawable/round_textview_clicked"
            android:enabled="false"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"></Button>

        <EditText
            android:id="@+id/et_token"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/round_textview"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="22dp"
            android:maxLength="6"
            android:hint="Enter 6 digit verification code here"
            android:textColorHint="#bebebe"
            android:textColor="@color/black"
            android:paddingLeft="22dp"></EditText>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/reload"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="122dp"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="22dp"
                android:textSize="16dp"
                android:textColor="@color/theme_blue"></TextView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_verfication_proceed"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/round_textview_grey"
            android:text="Proceed"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="6dp"></Button>

    </LinearLayout>

</ScrollView>