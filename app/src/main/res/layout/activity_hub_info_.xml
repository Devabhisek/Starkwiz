<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Activities.HubInfo_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hub\nInformation"
            android:textSize="30dp"
            android:textColor="@color/oceanblue"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let people know your Hub"
            android:textColor="@color/theme_blue"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"></TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/round_textview"
            android:hint="Name"
            android:paddingLeft="11dp"
            android:textColorHint="#bebebe"
            android:layout_marginTop="22dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/round_textview"
            android:hint="Full Address"
            android:paddingLeft="11dp"
            android:textColorHint="#bebebe"
            android:layout_marginTop="22dp"></EditText>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/location"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:textColor="@color/black"
                android:text="Tap here to place your location"></TextView>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/round_textview"
            android:hint="Year of Establishment"
            android:paddingLeft="11dp"
            android:textColorHint="#bebebe"
            android:layout_marginTop="22dp"></EditText>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="Contact +91"></TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/round_textview"
                android:hint="778 898 6838"
                android:paddingLeft="11dp"
                android:drawableRight="@drawable/ic_baseline_check_circle_24"
                android:textColorHint="#bebebe"></EditText>

        </LinearLayout>

        <Button
            android:id="@+id/btn_hubinfo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:text="Proceed"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"></Button>
    </LinearLayout>

</ScrollView>