<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".Activities.Signup_Activities.Signup_SetupPassword_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/splash"
            android:layout_marginTop="16dp"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set up \nPassword"
            android:textSize="26dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/oceanblue"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secure your account with\na good one"
            android:textSize="22dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/round_textview"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:textColorHint="#bebebe"
            android:maxLength="6"
            android:textColor="@color/black"
            android:paddingLeft="22dp"></EditText>

        <EditText
            android:id="@+id/et_cnfrm_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/round_textview"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:maxLength="6"
            android:hint="Confirm Password"
            android:textColorHint="#bebebe"
            android:textColor="@color/black"
            android:paddingLeft="22dp"></EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Strength"
            android:textSize="19dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"></TextView>

        <SeekBar
            android:id="@+id/seekbar_pswd"
            android:layout_width="220dp"
            android:layout_height="8dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="30dp"
            android:max="100"
            android:thumb="@null"></SeekBar>

        <TextView
            android:id="@+id/txt_strength"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Strong"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"></TextView>



        <Button
            android:enabled="false"
            android:id="@+id/btn_verfication_proceed"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="85dp"
            android:layout_gravity="bottom"
            android:background="@drawable/round_textview_grey"
            android:text="Let's Dive in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="6dp"></Button>



    </LinearLayout>


</ScrollView>