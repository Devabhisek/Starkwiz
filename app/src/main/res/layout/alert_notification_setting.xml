<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="22dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"></ImageView>

            <TextView
                android:id="@+id/txt_typeofuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify your Email ID"
                android:layout_below="@+id/img_alert"
                android:layout_marginTop="8dp"
                android:textSize="22dp"
                android:textColor="@color/theme_blue"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"></TextView>


            <TextView
                android:id="@+id/txt_belowtypeofuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick which type of Notification you\nwould like to receive in application"
                android:layout_below="@+id/txt_typeofuser"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:textColor="@color/theme_blue"
                android:gravity="center"
                android:layout_centerHorizontal="true"></TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theme_blue"
                android:text=" See Activity from other people"
                android:checked="true"
                android:textColor="@color/black"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="55dp"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theme_blue"
                android:text=" Friend Requests"
                android:textColor="@color/black"
                android:layout_marginLeft="55dp"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theme_blue"
                android:text=" Event Invitations"
                android:textColor="@color/black"
                android:layout_marginLeft="55dp"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theme_blue"
                android:text=" Reward Unlock"
                android:textColor="@color/black"
                android:layout_marginLeft="55dp"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theme_blue"
                android:text=" Like and Stars"
                android:textColor="@color/black"
                android:layout_marginLeft="55dp"></CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theme_blue"
                android:text=" Shares on other platform"
                android:textColor="@color/black"
               android:layout_marginLeft="55dp"
                android:layout_marginBottom="16dp"></CheckBox>





        </LinearLayout>

        <Button
        android:id="@+id/btn_change_email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/card_email_change"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textAllCaps="false"></Button>

    <Button
        android:id="@+id/btn_change_email_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/bordeetwo"
        android:layout_below="@+id/btn_change_email_confirm"
        android:text="Cancel"
        android:textColor="@color/theme_blue"
        android:textAllCaps="false"></Button>

    </LinearLayout>

</androidx.cardview.widget.CardView>