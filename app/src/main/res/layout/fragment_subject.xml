<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DynamoFragments.SubjectFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_fixturemonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIXTURE : "
                android:fontFamily="@font/nunito"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>


            <GridView
                android:id="@+id/subject_grid"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:backgroundTint="@color/white"
                android:horizontalSpacing="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:background="#EFF3F6"
                android:numColumns="3"></GridView>


            <RelativeLayout
                android:id="@+id/rl_addsubject"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/bordeethree"
                android:layout_margin="11dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add more subject by upgrading\nyour plan"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/pls"
                    android:textColor="@color/black"
                    android:drawablePadding="30dp"
                    android:layout_centerHorizontal="true"> </TextView>

            </RelativeLayout>

        </LinearLayout>
        </ScrollView>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>