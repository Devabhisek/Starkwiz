<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="110dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="220dp"
                android:layout_height="85dp"
                android:src="@mipmap/musiclogo"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"></ImageView>

            <TextView
                android:id="@+id/txt_typeofuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Music Video"
                android:layout_below="@+id/img_alert"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/theme_blue"
                android:gravity="center"
                android:layout_centerHorizontal="true"></TextView>

            <TextView
                android:id="@+id/txt_belowtypeofuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose the song you have created"
                android:layout_below="@+id/txt_typeofuser"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerHorizontal="true"></TextView>


            <TextView
                android:id="@+id/txt_type"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/txt_belowtypeofuser"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/round_textview"
                android:gravity="center"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24_black"
                android:text="1.Topic"
                android:textColor="@color/black"
                android:textSize="16dp"></TextView>


            <TextView
                android:id="@+id/txt_videoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video1234.vid"
                android:layout_below="@+id/txt_type"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_centerHorizontal="true"></TextView>



            <SeekBar
                android:id="@+id/seekbar_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="160dp"
                android:layout_marginBottom="22dp"
                android:background="@color/theme_blue"
                android:thumb="@null"></SeekBar>


            <TextView
                android:id="@+id/txt_browsefile"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/seekbar_video"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_button_music"
                android:gravity="center"
                android:text="Browse File"
                android:textColor="@color/white"
                android:textSize="16dp"></TextView>


        </LinearLayout>





    <Button
        android:id="@+id/btn_change_email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button_music"
        android:layout_below="@+id/card_email_change"
        android:text="Done"
        android:textColor="@color/white"
        android:textAllCaps="false"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bordee"
        android:layout_below="@+id/btn_change_email_confirm"
        android:text="Cancel"
        android:textColor="@color/theme_blue"
        android:textAllCaps="false"></Button>



    </LinearLayout>

</androidx.cardview.widget.CardView>