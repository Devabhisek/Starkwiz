<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="14dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="11dp"
    android:id="@+id/cardview_math">


        <LinearLayout
            android:id="@+id/linear_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_scheduled_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"></TextView>


                <TextView
                    android:id="@+id/txt_scheduled_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="35dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_scheduled_subjectname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"></TextView>

                <TextView
                    android:id="@+id/txt_scheduled_modulename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number System &amp; \nAlgebra"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Remaining"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"></TextView>

                <TextView
                    android:id="@+id/txt_remainingdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:text="4 d:3 h:43 m"
                    android:textColor="@color/white"
                    android:textSize="14dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marks"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"></TextView>

                <TextView
                    android:id="@+id/txt_schdl_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"></TextView>

                <TextView
                    android:id="@+id/txt_scheduled_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"></TextView>

            </LinearLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>