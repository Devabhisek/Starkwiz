<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Activities.HubListsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:src="@mipmap/secondsplash"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hub"
            android:textColor="@color/oceanblue"
            android:textSize="22dp"
            android:layout_marginTop="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="26dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let your mates recignize you"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="11dp"
            android:textSize="18dp"
            android:textColor="@color/theme_blue"></TextView>


       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/lv_hublist"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btn_hublists"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_textview"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Proceed"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"></Button>

    </LinearLayout>

</ScrollView>