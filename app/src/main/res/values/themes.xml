<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Starkwiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="CustomAppTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">@color/theme_blue</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomCalendarMonth" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogStyle"
        parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/theme_blue</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>




</resources>
